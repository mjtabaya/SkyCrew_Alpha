<table class="table table-dark table-hover" data-pagination="true" data-search="true" data-toggle="table">
  <thead>
      <tr>
          <th data-sortable="true" data-field="type">Type</th>
          <th data-sortable="true" data-field="name">Name</th>
          <th data-sortable="true" data-field="description">Description</th>
          <th>Options</th>
      </tr>
  </thead>

  <tbody>
    <% @weapons.each do |weapon| %>
      <tr>
        <td><%= image_tag("weapons/#{weapon.weapon_type}.png".downcase) %></td>
        <td><%= weapon.name %></td>
        <td><%= weapon.description %></td>
        <td><%= link_to 'Details', weapon %> |
            <%= link_to 'View Equipped', weapon %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
