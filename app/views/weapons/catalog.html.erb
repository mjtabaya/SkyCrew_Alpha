<p id="notice"><%= notice %></p>

<% provide(:title, "Weapons") %>

<h1>Blacksmith - Weaponry</h1>

<table class="table table-dark table-hover">
  <thead>
    <tr>
      <th>Type</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"> </th>
    </tr>
  </thead>

  <tbody>
    <% @weapons.each do |weapon| %>
      <tr>
        <td><%= image_tag("weapons/#{weapon.weapon_type}.png".downcase) %></td>
        <td><%= weapon.name %></td>
        <td><%= weapon.description %></td>
        <td><%= link_to 'Details', weapon %></td>
        <td>
          <td>
            <%= link_to 'Purchase', {:controller => "weapons", :action => "add_arsenal", :captain_id => current_captain.id, :weapon_id=> weapon.id} , :method=>:post  %>
          </td>
        </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Weapon', catalog_url %>
